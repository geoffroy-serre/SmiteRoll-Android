<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="#D1C9C9">
    <TextView
            android:text="Play this god if you can !!!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="20dp"
            android:layout_centerInParent="false" android:textColor="#2196F3"
            android:background="#AFAFAF" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/result"
            android:layout_marginTop="201dp" android:layout_marginBottom="158dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"/>
    <Button
            android:text="Click Me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/clickMe"
            android:layout_below="@id/textView"
            android:layout_marginTop="359dp" android:layout_centerHorizontal="true"
            android:clickable="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/godImageView"
            android:layout_centerInParent="true"/>
</RelativeLayout>
